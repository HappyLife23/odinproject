<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= movies.title %></title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <div class="header">
      <h1>Superheroes</h1>
      <p>Favorite superheros</p>
    </div>
    <div class="container">
      <% movies.forEach(movie => { %>
      <div class="hero-card">
        <h4>Hero: <%= movie.name %></h4>
        <h5><strong>Suprpower:</strong> <%= movie.superpower %></h5>
        <img
          class="hero-img"
          src="<%= movie.image %>"
          alt="<%= movie.name %>"
        />
      </div>
      <% }) %>
    </div>
  </body>
</html>
